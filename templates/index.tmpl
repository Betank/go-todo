<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ServerSide Todo</title>
    <link rel="stylesheet" href="assets/index.css">
    <link rel="stylesheet" href="assets/base.css">
</head>

<body>
    <section class="todoapp">
        <header class="header">
            <h1>todos</h1>
            <form action="/add" method="POST">
                <input name="text" class="new-todo" placeholder="What needs to be done?" autofocus>
            </form>
        </header>
        <section class="main">
            <input class="toggle-all" type="checkbox">
            <label for="toggle-all">Mark all as complete</label>
            <ul class="todo-list" id='list'>
                {{range .}}
                <li data-id="{{.ID}}" {{if .Completed}}class="completed" {{end}}>
                    <div class="view">
                        <input class="toggle" type="checkbox" {{if .Completed}}checked{{end}} onclick="window.location='/update/{{.ID}}'">
                        <label>{{.Title}}</label>
                        <button class="destroy" onclick="window.location='/delete/{{.ID}}'"></button>
                    </div>
                </li>{{end}}
            </ul>
            <footer class="footer">
                <span class="todo-count"></span>
                <div class="filters">
                    <a href="/" class="selected">All</a>
                    <a href="/active">Active</a>
                    <a href="/completed">Completed</a>
                </div>
                <button class="clear-completed" onclick="window.location='/clear'">Clear completed</button>
            </footer>
        </section>
    </section>
    <footer class="info">
        <p>HTML and CSS from <a href="http://todomvc.com">TodoMVC</a></p>
    </footer>
</body>

</html>